<link rel="stylesheet" href="/css/module-style/articls.css">

<div class="content">
    <div class="block">
        <div class="main-title">Все категории</div>
        <% for (item of allCategory) { %>
            <div class="articl">
                <img src="/src/category-previews/<%= item.preview %>" alt="">
                <div class="text">
                    <div class="top">
                        <div class="title">
                            <a href="../../../../category/<%= item.url %>" class="text"><%= item.title %></a>
                            <div class="public-time"><%= item.sub_category_amount %></div>
                        </div>
                        <div class="description"><%= item.description %></div>
                    </div>
                    <div class="bottom"></div>
                </div>
            </div>
        <% } %>
    </div>
</div>